<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="40dp"
    android:gravity="center_horizontal"
    android:background="#FFFAF0"
    tools:context=".DetailData">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/student1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="377dp"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewNomor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/nomor"
            android:drawablePadding="10dp"
            android:text="NIM"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewIsiNomor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1781945001"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorAccent" />

        <TextView
            android:id="@+id/textViewNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/nama"
            android:drawablePadding="10dp"
            android:text="Nama"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewIsiNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ricki Maulana"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorAccent" />

        <TextView
            android:id="@+id/textViewTanggalLahir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/tanggal_lahir"
            android:drawablePadding="10dp"
            android:text="Tanggal Lahir"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewIsiTanggalLahir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1945-08-17"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorAccent" />

        <TextView
            android:id="@+id/textViewJenisKelamin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/jenis_kelamin"
            android:drawablePadding="10dp"
            android:text="Jenis Kelamin"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewIsiJenisKelamin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Laki-Laki"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorAccent" />

        <TextView
            android:id="@+id/textViewAlamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/alamat"
            android:drawablePadding="10dp"
            android:text="Alamat"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewIsiAlamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kota Surabaya"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorAccent" />

    </LinearLayout>

</LinearLayout>