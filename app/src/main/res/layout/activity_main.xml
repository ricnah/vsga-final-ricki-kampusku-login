<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    android:layout_column="3"
    android:background="#FFFAF0"
    android:gravity="center"
    tools:context=".MainActivity">
cucu
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KAMPUSKU"
        android:textStyle="bold"
        android:textSize="40sp"
        android:textColor="@color/colorAccent"
        android:layout_marginBottom="20dp"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/student1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/btndashboard1style"
            android:src="@drawable/archive"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:background="@drawable/btndashboard1style"
            android:id="@+id/btnLihat"
            android:textSize="25sp"
            android:textColor="#FFFFFF"
            android:text="Lihat Data"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/btndashboard2style"
            android:src="@drawable/add"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:background="@drawable/btndashboard2style"
            android:id="@+id/btnInput"
            android:textSize="25sp"
            android:textColor="#FFFFFF"
            android:text="Input Data"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/btndashboard3style"
            android:src="@drawable/info"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:background="@drawable/btndashboard3style"
            android:id="@+id/btnInfo"
            android:textSize="25sp"
            android:textColor="#FFFFFF"
            android:text="Informasi"/>

    </LinearLayout>

</LinearLayout>